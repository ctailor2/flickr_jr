source "https://rubygems.org"

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'

gem 'shotgun'

gem 'bcrypt-ruby'

# Use carrierwave and mini_magick to handle image uploads
gem 'carrierwave'
gem 'mini_magick'

group :test do
  gem 'faker'
  gem 'rspec'
end
